<h1>Welcome to your tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <p><%= task.completed? ? '<i class="fa-regular fa-square-check"></i>'.html_safe : '<i class="fa-regular fa-square"></i>'.html_safe %> <%= link_to task.title, task_path(task) %> <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe , task_path(task), data: {turbo_method: 'delete', turbo_confirm: 'Are you sure?'} %></p>
    <% end %>
  </ul>
<%= link_to 'Add a new task', new_task_path, class:"btn btn-primary" %>
